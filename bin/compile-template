#!/usr/bin/env node
var dot = require('dot');
var fs = require('fs');


fs.readFile('./index.dot', function(err, templateContent){
	if (err) {
		console.log(err);
		return process.exit(1);
	}

	var template = dot.template(templateContent);

	fs.readFile('./lib/index.min.js', function(err, sourceContent){
		if (err) {
			console.log(err);
			return process.exit(1);
		}

		fs.writeFile('./index.html', template({ source: sourceContent }, function(err){
			if (err) {
				console.log(err);
				return process.exit(1);
			}
			process.exit(0);
		}));
	});
});
