; -ms-transition: all .3s ease-in-out; transition: all .3s ease-in-out;}.dothiv-replacement-aside::after{content: '';position: absolute;bottom: -7px;left: 50%;margin-left: -10px;width: 0;height: 0;border-style: solid;border-width: 7.5px 10px 0 10px;border-color: #ffffff transparent transparent transparent;}.dothiv-replacement-aside::before{content: '';position: absolute;bottom: -8px;left: 50%;margin-left: -10px;width: 0;height: 0;border-style: solid;border-width: 7.5px 10px 0 10px;border-color: #ddd transparent transparent transparent;}.down > .dothiv-replacement-aside{top: 100%;bottom: auto;margin-top: 16px;}.down > .dothiv-replacement-aside::after{top: -7px;bottom: auto;border-width: 0 10px 7.5px 10px;border-color: transparent transparent #ffffff transparent;}.down > .dothiv-replacement-aside::before{top: -8px;bottom: auto;border-width: 0 10px 7.5px 10px;border-color: transparent transparent #ddd transparent;}.left > .dothiv-replacement-aside{margin-left: -260px;}.left > .dothiv-replacement-aside::after,.left > .dothiv-replacement-aside::before{left: 100%;margin-left: -25px;}.right > .dothiv-replacement-aside{margin-left: 0;}.right > .dothiv-replacement-aside::after,.right > .dothiv-replacement-aside::before{left: auto;right: 100%;margin-right: -25px;}a.dothiv-cta{color: #fff;}a.dothiv-cta:hover{background: #ff47a5;}@media only screen and (max-device-width: 1024px) {.dothiv-replacement-aside{position: fixed;right: 0;bottom: 0;left: 0;margin: 0;width: 100%;opacity: 1;padding: 25px 15px;-webkit-transform: translateY(100%); -moz-transform: translateY(100%); -ms-transform: translateY(100%); transform: translateY(100%);-webkit-transition: -webkit-transform .3s ease-in-out; -moz-transition: -moz-transform .3s ease-in-out; -ms-transition: -ms-transform .3s ease-in-out; transition: transform .3s ease-in-out;}.dothiv-state:checked ~ .dothiv-replacement-aside{left: 0;-webkit-transform: none; -moz-transform: none; -ms-transform: none; transform: none;-webkit-transition: -webkit-transform .3s ease-in-out; -moz-transition: -moz-transform .3s ease-in-out; -ms-transition: -ms-transform .3s ease-in-out; transition: transform .3s ease-in-out;}.dothiv-cta{margin-top: 20px;}}
	</style>
	<link rel="apple-touch-icon" sizes="57x57" href="public/apple-touch-icon-57x57.png">
	<link rel="apple-touch-icon" sizes="114x114" href="public/apple-touch-icon-114x114.png">
	<link rel="apple-touch-icon" sizes="72x72" href="public/apple-touch-icon-72x72.png">
	<link rel="apple-touch-icon" sizes="144x144" href="public/apple-touch-icon-144x144.png">
	<link rel="apple-touch-icon" sizes="60x60" href="public/apple-touch-icon-60x60.png">
	<link rel="apple-touch-icon" sizes="120x120" href="public/apple-touch-icon-120x120.png">
	<link rel="apple-touch-icon" sizes="76x76" href="public/apple-touch-icon-76x76.png">
	<link rel="apple-touch-icon" sizes="152x152" href="public/apple-touch-icon-152x152.png">
	<link rel="apple-touch-icon" sizes="180x180" href="public/apple-touch-icon-180x180.png">
	<link rel="icon" type="image/png" href="public/favicon-192x192.png" sizes="192x192">
	<link rel="icon" type="image/png" href="public/favicon-160x160.png" sizes="160x160">
	<link rel="icon" type="image/png" href="public/favicon-96x96.png" sizes="96x96">
	<link rel="icon" type="image/png" href="public/favicon-16x16.png" sizes="16x16">
	<link rel="icon" type="image/png" href="public/favicon-32x32.png" sizes="32x32">
	<meta name="msapplication-TileColor" content="#e00073">
	<meta name="msapplication-TileImage" content="public/mstile-144x144.png">
</head>
<body class="dothiv">
	<header class="header">
		<a class="logo" target="_blank" href="{{=it['logourl']}}" title="{{=it['logotitle']}}">
			.hiv
		</a>
		<aside class="languages">
			{{~it['langs'] :lang:index}}
				<a href="{{=lang['file']}}" class="language">{{=lang['label']}}</a>
			{{~}}
		</aside>
	</header>
	<main class="main">
		<div class="stage">
			<article class="hero">
				<div class="demo">
					<label class="dothiv-replacement-wrapper">
						<input class="dothiv-state" type="radio" name="dothiv" checked="checked"/>
						<aside class="dothiv-replacement-aside">
							<div>
								<strong class="dothiv-h">{{=it['exampleheadline']}}</strong>
								{{=it['examplecopy']}}
							</div>
							<label class="dothiv-state-revert-button" for="dothiv-state-revert">
								{{=it['examplebutton']}}
							</label>
						</aside>
					</label>
				</div>
				<h1 class="h h0 stage-title">{{=it['heroheadline']}} </h1>
				<p class="p">{{=it['herocopy']}}</p>
				<div class="buttonrow">
					<label for="output" class="button">{{=it['herobutton']}}</label>
				</div>
			</article>
		</div>
		<div class="generator-content">
			<input type="radio" id="entry" class="state" name="states" />
			<div class="entry">
				<div class="buttonrow">
					<form class="js_generator" novalidate="novalidate">
						<h3 class="h h3">{{=it['generatorheadline']}}</h3>
						<fieldset class="fieldset">
							<legend class="legend">
								Content
							</legend>
							<label class="row">
								<span class="label">Popover headline</span>
								<input name="headline" class="input text" type="text" value="{{=it['fields']['headline']}}" required="required" />
							</label>
							<label class="row">
								<span class="label">Popover text</span>
								<input name="text" class="input text" type="text" value="{{=it['fields']['text']}}" required="required" />
							</label>
							<label class="row">
								<span class="label">Button text</span>
								<input name="buttonText" class="input text" type="text" value="{{=it['fields']['buttonText']}}" required="required" />
							</label>
							<label class="row">
								<span class="label">Button URL</span>
								<input name="buttonHref" class="input text" type="url" value="{{=it['fields']['buttonHref']}}" required="required" />
							</label>
						</fieldset>
						<fieldset class="fieldset">
							<legend class="legend">
								Styling
							</legend>
							<label class="row">
								<span class="label">Dot background color</span>
								<div class="input color">
									<input name="dotBackground" type="color" class="native" value="{{=it['fields']['dotBackground']}}" required="required" />
								</div>
							</label>
							<label class="row">
								<span class="label">Dot size</span>
								<input name="diameter" type="text" class="input text" value="{{=it['fields']['diameter']}}" required="required" />
							</label>
							<label class="row">
								<span class="label">Popover background color</span>
								<div class="input color">
									<input name="popoverBackground" type="color" class="native" value="{{=it['fields']['popoverBackground']}}" required="required" />
								</div>
							</label>
							<label class="row">
								<span class="label">Popover text color</span>
								<div class="input color">
									<input name="popoverColor" type="color" class="native" value="{{=it['fields']['popoverColor']}}" required="required" />
								</div>
							</label>
							<label class="row">
								<span class="label">Popover font size</span>
								<input name="popoverFontSize" type="text" class="input text" value="{{=it['fields']['popoverFontSize']}}" required="required" />
							</label>
							<label class="row">
								<span class="label">Popover headline text color</span>
								<div class="input color">
									<input name="headlineColor" type="color" class="native" value="{{=it['fields']['headlineColor']}}" required="required" />
								</div>
							</label>
							<label class="row">
								<span class="label">Popover headline font weight</span>
								<div class="input select">
									<select name="headlineFontweight" class="native">
										<option>{{=it['fields']['headlineFontweight']}}</option>
										<option>normal</option>
									</select>
								</div>
							</label>
							<label class="row">
								<span class="label">Popover button background color</span>
								<div class="input color">
									<input name="buttonBackground" type="color" class="native" value="{{=it['fields']['buttonBackground']}}" required="required" />
								</div>
							</label>
							<label class="row">
								<span class="label">Popover button background hover color</span>
								<div class="input color">
									<input name="buttonHoverBackground" type="color" class="native" value="{{=it['fields']['buttonHoverBackground']}}" required="required" />
								</div>
							</label>
							<label class="row">
								<span class="label">Popover button text color</span>
								<div class="input color">
									<input name="buttonColor" type="color" class="native" value="{{=it['fields']['buttonColor']}}" required="required" />
								</div>
							</label>
						</fieldset>
						<fieldset class="fieldset">
							<legend class="legend">
								Tech
							</legend>
							<label class="row">
								<span class="label">If the script should only work on World Aids Day (Dec 1th)</span>
								<div class="input select">
									<select name="guardDate" class="native">
										<option value="false" selected="selected">No</option>
										<option value="true">Yes</option>
									</select>
								</div>
							</label>
							<label class="row">
								<span class="label">Query strings to search in (comma delimited)</span>
								<input name="queries" type="text" class="input text" value="{{=it['fields']['queries']}}">
							</label>
							<label class="row">
								<span class="label">Character to replace in matched elements</span>
								<input name="replaced" type="text" class="input text" value="{{=it['fields']['replaced']}}">
							</label>
							<label class="row">
								<span class="label">Offset between dot and popover in px</span>
								<input name="offset" type="text" class="input text" value="{{=it['fields']['offset']}}">
							</label>
							<label class="row">
								<span class="label">className prefix for generated CSS</span>
								<input name="prefix" type="text" class="input text" value="{{=it['fields']['prefix']}}">
							</label>
						</fieldset>
						<button type="submit" class="button generate-button">{{=it['generatorbutton']}}</button>
					</form>
				</div>
			</div>
			<input type="radio" id="output" class="state" name="states" />
			<div class="exit">
				<ul class="steps">
					<li>
						<h4 class="h h3">{{=it['steponeheadline']}}</h4>
						<p>{{=it['steponecopy']}}</p>
					</li>
					<li>
						<h4 class="h h3">{{=it['steptwoheadline']}}</h4>
						<p>{{=it['steptwocopy']}}</p>
					</li>
					<li>
						<h4 class="h h3">{{=it['stepthreeheadline']}}</h4>
						<p>{{=it['stepthreecopy']}}</p>
					</li>
				</ul>
				<textarea class="output js_output" readonly="readonly"><script type="text/javascript">{{=it['reassurancecomment']}}{{=it['source']}}window.dotHIVify({});</script>
				</textarea>
				<div class="buttonrow pullright">
					<label for="entry" class="inline-button">{{=it['configurebutton']}}</label>
				</div>
			</div>
		</div>
	</main>
	<footer class="footer">
		<ul class="nav">
			<li><a target="_blank" href="https://click4life.hiv/en/c/imprint">{{=it['imprint']}}</a></li>
			<li><a target="_blank" href="https://click4life.hiv/en/c/contact">{{=it['contact']}}</a></li>
			<li><a target="_blank" href="https://github.com/marionebl/dothivify">{{=it['github']}}</a></li>
		</ul>
	</footer>
	<script class="js_generator_template" type="x-custom/javascript">
		{{=it['reassurancecomment']}}
		{{=it['source']}}
	</script>
	<script class="js_snippet_defaults" type="application/json">
		{{=it['defaults']}}
	</script>
	<script type="text/javascript" src="public/index.js"></script>
</body>
</html>
